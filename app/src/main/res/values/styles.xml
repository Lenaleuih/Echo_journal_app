<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimaryCream</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryGrey</item>-->
        <!--<item name="colorAccent">@color/color</item>-->
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!--define the style of action button-->
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
    </style>

    <!--define the style of action bar-->

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimaryCream</item>

        <!--define the textStyle for SettingActivity-->
    </style>

    <style name="settingText">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="settingBtn">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:padding">20px</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
