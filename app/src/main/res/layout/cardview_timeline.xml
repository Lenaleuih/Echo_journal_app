<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/journalPhoto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            tools:src="@drawable/journey1"
            />

        <TextView
            android:id="@+id/journalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/journalPhoto"
            android:layout_alignLeft="@+id/journalPhoto"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:onClick="viewMessage"
            tools:text="One day with the game!"
            />
        <!--todo:onclickmethod-->

    </RelativeLayout>
</android.support.v7.widget.CardView>

